{
    "name": "chisel",
    "displayName": "Chisel Syntax",
    "description": "Support for Chisel HDL",
    "version": "0.0.0",
    "publisher": "chisel-lang",
    "license": "MIT",
    "engines": {
        "vscode": "^1.5.0"
    },
    "homepage": "https://github.com/aaronduino/vscode-chisel-syntax",
    "repository": {
        "type": "git",
        "url": "https://github.com/aaronduino/vscode-chisel-syntax.git"
    },
    "icon": "images/smooth-spiral.png",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "chisel",
                "aliases": [
                    "Chisel",
                    "chisel"
                ],
                "extensions": [
                    ".scala",
                    ".chisel"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "snippets": [
            {
              "language": "chisel",
              "path": "./snippets/chisel.json"
            }
        ],
        "grammars": [
            {
                "language": "chisel",
                "scopeName": "source.chisel",
                "path": "./syntaxes/Chisel.tmLanguage"
            }
        ]
    }
}
